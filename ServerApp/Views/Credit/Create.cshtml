@model (ServerApp.Models.Credit credit, Info info)

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Credit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="credit.ContractNumber" class="control-label"></label>
                <input asp-for="credit.ContractNumber" class="form-control" />
                <span asp-validation-for="credit.ContractNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="credit.Type" class="control-label"></label>
                <select asp-for="credit.Type" asp-items="Html.GetEnumSelectList<CreditType>()" class="form-control"></select>
                <span asp-validation-for="credit.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CurrencyId" class="control-label">Валюта</label>
                <select asp-for="credit.CurrencyId" asp-items="@(new SelectList(Model.info.Currencies, "Id", "Name"))">
                    <option value="0">Выберите одно</option>
                </select>
                <div><span asp-validation-for="credit.CurrencyId" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="credit.StartDate" class="control-label"></label>
                <input asp-for="credit.StartDate" class="form-control" />
                <span asp-validation-for="credit.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="credit.EndDate" class="control-label"></label>
                <input asp-for="credit.EndDate" class="form-control" />
                <span asp-validation-for="credit.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="credit.ContractTerm" class="control-label"></label>
                <input asp-for="credit.ContractTerm" class="form-control" />
                <span asp-validation-for="credit.ContractTerm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="credit.StartSum" class="control-label"></label>
                <input asp-for="credit.StartSum" class="form-control" />
                <span asp-validation-for="credit.StartSum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="credit.Percent" class="control-label"></label>
                <input asp-for="credit.Percent" class="form-control" />
                <span asp-validation-for="credit.Percent" class="text-danger"></span>
            </div>
            <input type="hidden" name="item1.userId" value="@ViewBag.UserId"/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
