@model List<Employee>
@{
    ViewData["Title"] = "Home Page";
}

<table class='table'>
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
            <th>День рождения</th>
            <th>Пол</th>
            <th>Серия паспорта</th>
            <th>Номер паспорта</th>
            <th>Кем выдан</th>
            <th>Дата выдачи</th>
            <th>Идент. номер</th>
            <th>Место рождения</th>
            <th>Город проживания</th>
            <th>Адрес проживания</th>
            <th>Телефон дом</th>
            <th>Телефон моб</th>
            <th>E-mail</th>
            <th>Место работы</th>
            <th>Должность</th>
            <th>Семейное положение</th>
            <th>Гражданство</th>
            <th>Инвалидность</th>
            <th>Пенсионер</th>
            <th>Ежемесячный доход</th>
            <th>Военнообязанный</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Surname</td>
                <td>@employee.Lastname</td>
                <td>@employee.Birthday</td>
                <td>@employee.Sex</td>
                <td>@employee.PassportSeries</td>
                <td>@employee.PassportSeries</td>
                <td>@employee.PassportGiver</td>
                <td>@employee.PassportGiveDate</td>
                <td>@employee.IdentityNumber</td>
                <td>@employee.Birthplace</td>
                <td>@employee.City.Name</td>
                <td>@employee.Address</td>
                <td>@employee.PhoneHome</td>
                <td>@employee.PhoneMobile</td>
                <td>@employee.Email</td>
                <td>@employee.Workplace</td>
                <td>@employee.WorkPosition</td>
                <td>@employee.FamilyPosition.Position</td>
                <td>@employee.Citizenship.Name</td>
                <td>@employee.Disability.Name</td>
                <td>@employee.Pensioner</td>
                <td>@employee.Income</td>
                <td>@employee.Military</td>
                <td>
                    <a href='/editemployee/@employee.Id'>Edit</a>
                    <a href='/deleteemployee/@employee.Id'>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>